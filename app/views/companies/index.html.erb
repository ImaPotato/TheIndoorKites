<div class="companies-card" >
  <h1>transport companies</h1>

  <table>
    <thead>
      <tr>
        <th>Company name</th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.company_name %></td>
          <td class="companies-button"><%= link_to 'View', company %></td>
          <td class="companies-button"><%= link_to 'Edit', edit_company_path(company) %></td>
          <td class="companies-button"><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td class="companies-button"><%= link_to '+ Add Company', new_company_path %></td>
      </tr>
    </tfoot>
  </table>

  <br>

  

</div>