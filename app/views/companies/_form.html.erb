<%= javascript_include_tag :defaults %>
<div class="companies-form">
<%= form_for(@company) do |f| %>

  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
        <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>

  <div class="company-name">
    <%= f.label :company_name %>
  


    <% if @company.new_record? %>
      <%= f.text_field :company_name %>
        <% else %>
        <%= f.text_field :company_name, :readonly => true  %>
      <% end %>
  </div>

  <%= f.fields_for :connections do |builder| %>
    <%= render 'connection_fields', :f => builder %>
  <% end %>
  

    <div class="companies-button"> <%= link_to_add_fields " + Add Connection", f, :connections %></div>
  <div class="submit-button"><%= f.submit %></div>
<% end %>

</div>


