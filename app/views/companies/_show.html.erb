<div>
	<% company = Company.find(id) %>
	<p>
  	<strong>Company name:</strong>
  	<%= company.company_name%>
	</p>
	<ol>
	  	<% company.connections.each do |conn| %>
	  	<li><%= conn.location_one + " to " + conn.location_two %></li>
  		<li><%= "$ per g " + conn.weight_cost.to_s %>
  		<li><%= "$ per cubic metres " + conn.volume_cost.to_s %> 
  	<% end %>
	</ol>
	<%= link_to 'Edit', edit_company_path(company) %>
</div>
