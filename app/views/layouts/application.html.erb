<!DOCTYPE html>
<html>
<head>
  <title>TheIndoorKites</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300,300italic,400italic' rel='stylesheet' type='text/css'>
</head>
<body>
<div  id="top-menu">
  <div id="header" class="pure-menu pure-menu-open pure-menu-horizontal">
    <%= link_to 'KPSmart', homepage_path, class: "pure-menu-heading" %>
    <ul >
      <li>
        <%= link_to 'Mail', mail_page_path %>
      </li>
      <li>
        <%= link_to 'Companies + Connections', companies_path %>
      </li>
      <li>
        <%= link_to 'Pricing', prices_path %>
      </li>
      <li>
        <%= link_to 'Business', business_path %>
      </li>
      <% if !current_user.nil? && current_user.is_manager %>
      <li>
        <%= link_to 'Routes', path_path %>
      </li>
      <% end %>
    </ul>
    <ul id="menu-user-links">
      <% if current_user %>
          <li><%= current_user[:email] %></li>
          <li>
            <%= link_to 'Log out', log_out_path%>
          </li>
      <% else %>
          <li>
            <%= link_to 'Sign up', sign_up_path%>
          </li>
          <li>
            <%= link_to 'Log in', log_in_path %>
          </li>
      <% end %>
    </ul>
  </div>
</div>

<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}"%>
<% end %>
<%= yield %>

</body>
</html>