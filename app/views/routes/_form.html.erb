<%= form_for(@route) do |f| %>
  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
      <% @route.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <br/>
      <%= f.label :name, "Name" %>
      <br/>
      <%= f.text_field :name , required: true %>
      <% connections_array = @connections.map { |connection| [connection.name_with_locations ,connection.id] } %>
      <br/>
      <%= f.label :name, "Connection" %>
      <br/>
      <%=f.select :connection, options_for_select(connections_array),  inlcude_blank: "Choose one!", required: true %>



      <% @route.connections.each do |route| %>
        <%= route.location_one.to_s + "-" + route.location_two.to_s %>
      <% end %> 


      <div class="actions">
        <%= f.submit %>
      </div>
    </div>

<% end %>
