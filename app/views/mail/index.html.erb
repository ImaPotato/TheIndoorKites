<div class="mail-card" >
<h1>Listing mail</h1>

<table>
  <thead>
    <tr>
      <th>destination</th>
      <th>origin</th>
      <th>Priority</th>
      <th>Sent</th>
      <th>Received</th>
      <th>Cost</th>
      <th>Current location</th>
  </thead>

  <tbody>
    <% @mail.each do |mail| %>
      <tr>
        <td><%= mail.to %></td>
        <td class="shaded"><%= mail.from %></td>
        <td><%= mail.priority %></td>
        <td class="shaded"><%= mail.send_date %></td>
        <td><%= mail.receive_date %></td>
        <td class="shaded"><%= mail.cost %></td>
        <td><%= mail.current_location %></td>
        <td><%= link_to 'View', mail %>
            <%= link_to 'Edit', edit_mail_path(mail) %>
            <%= link_to 'Delete', mail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mail', new_mail_path %>

</div>