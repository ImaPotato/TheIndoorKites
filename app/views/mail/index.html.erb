<div class="mail-card" >
<h1>processed mail</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>sender</th>
      <th>recipient</th>
      <th>origin</th>
      <th>destination</th>
      <th>Priority</th>
      <th>Sent</th>
      <th>Cost</th>
      <th>Current location</th>
  </thead>

  <tbody>
    <% @mail.each do |mail| %>
      <tr class="list-row" >
        <td><%= mail.id %></td>
        <td><%= mail.sender %></td>
        <td><%= mail.receiver %></td>
        <td><%= mail.from %></td>
        <td><%= mail.to %></td>
        <td><%= mail.priority %></td>
        <td><%= mail.send_date %></td>
        <td><%= mail.cost %></td>
        <td><%= mail.current_location %></td>
        <td class="mail-actions"><%= link_to 'View', mail %>
            <%= link_to 'Edit', edit_mail_path(mail) %>
            <%= link_to 'Delete', mail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="mail-edit-button"><%= link_to 'New Mail', new_mail_path %></div>

</div>