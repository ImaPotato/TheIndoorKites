<div>
	<% mail = Mail.find(id) %>
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>To:</strong>
	  <%= mail.to %>
	</p>

	<p>
	  <strong>From:</strong>
	  <%= mail.from %>
	</p>
	<p>
	  <strong>Priority:</strong>
	  <%= mail.priority %>
	</p>
	<p>
	  <strong>Cost:</strong>
	  <%= mail.cost %>
	</p>

	<p>
	  <strong>Current location:</strong>
	  <%= mail.current_location %>
	</p>

	<%= link_to 'Edit', edit_mail_path(mail) %>
</div>